{% extends "task/index.jinja" %}

{% block title %}Registration{% endblock %}

{% block content %}
    <br><br>
    <div>
        <h2 align="center">Sign Up</h2>
        <br>
        <form action="" method="POST" class="container card mb-3">
            <div class="card-text col-11 col-sm-9 col-md-8" style="margin: 0 auto; padding: 25px">
                {% csrf_token %}
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" maxlength="100" class="form-control" name="username" id="username" placeholder="azamatiktop">
                </div>
                <p class="text-danger">
                    {% if form.errors.username %}{{ form.errors.username }}{% endif %}
                </p>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" maxlength="100" class="form-control" name="email" id="email" placeholder="azamatkomaev@mail.ru">
                </div>
                <p class="text-danger">
                    {% if form.errors.email %}{{ form.errors.email }}{% endif %}
                </p>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" maxlength="100" class="form-control" name="password" id="password" placeholder="very hard password">
                </div>
                <a href="{{ url ('user.login') }}">Do u have an account? So, go here.</a>
                <p class="text-danger">
                    {% if form.errors.password %}{{ form.errors.password }}{% endif %}
                </p>
                <br>
                <button type="submit" class="btn btn-success">Register!</button>
            </div>
        </form>
    </div>
{% endblock %}
